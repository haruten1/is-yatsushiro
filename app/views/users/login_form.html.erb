<main>
        <div class="main-inner">
            <h2 class="top-title new-account-title">ログイン</h2>
            <%= form_with url: "/login" do |form| %>
                <div class="new-account-area-wrapper">
                    <div class="new-account-area">
                        <% if @error_message %>
                            <div class="form-error">
                                <%= @error_message %>
                            </div>
                        <% end %> 
                        <form class="new-account-form">
                            <div class="form-item">
                                <label class="form-label">メールアドレス</label>
                                <p class="mandatory">必須</p>
                                <input type="text" name="mail" value="<%= @mail%>">
                            </div>
                            <div class="form-item">
                                <label class="form-label">パスワード</label>
                                <p class="mandatory">必須</p>
                                <input type="password" name="password" value="<%= @password%>">
                            </div>
                        </form>
                    </div>
                    <div class="button-area">
                    <input class="button" type="submit" value="ログイン">
                    </div>
                </div>
            <% end%>
            <div class="button-area">
                <%= link_to("サンプルユーザーでログイン", "login/sample", method: "post",class:"button button_link") %>
            </div>
        </div>
    </main>