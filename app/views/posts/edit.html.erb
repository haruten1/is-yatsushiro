<main>
        <div class="main-inner">
            <h2 class="top-title new-account-title">依頼内容修正</h2>
            <%= form_with url: "/posts/#{@post.id}/update" do |form| %>
                <div class="new-account-area-wrapper">
                    <div class="new-account-area"> 
                        <form class="new-account-form">
                            <div class="form-item">
                                <label class="form-label">件名</label>
                                <p class="mandatory">必須</p>
                                <input type="text" name="title" value ="<%= @post.title %>">
                            </div>
                            <div class="form-item">
                                <label class="form-label">カテゴリー</label>
                                <p class="mandatory">必須</p>
                                <select name="category_id">
                                    <option selected>ーーカテゴリー選択ーー
                                    <option value="1">Excel
                                    <option value="2">IT
                                    <option value="3">業務経験
                                    <option value="4">写真
                                    <option value="5">イラスト
                                    <option value="6">スポーツ
                                    <option value="7">資格
                                    <option value="8">デザイン
                                    <option value="9">ライティング
                                    <option value="10">その他
                                </select>
                            </div>
                            <div class="form-item">
                                <label class="form-label">応募期限</label>
                                <p class="mandatory">必須</p>
                                <input type="date" name="deadline">
                            </div>
                            <div class="form-item">
                                <label class="form-label">依頼内容詳細</label>
                                <p class="mandatory">必須</p>
                                <textarea name="deatail" id="" cols="30" rows="10" class="request-post-content"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="button-area">
                        <input class="button" type="submit" value="修正する">
                    </div>
                </div>
            <% end %>
                    
                    <div class="button-area">
                        <%= link_to("戻る", "/posts/#{@post.id}", class:"button button_link") %>
                    </div>
                    <div class="button-area">
                        <%= link_to("投稿を削除する", "/posts/#{@post.id}/destroy", { method: :post, data: {confirm: "投稿を削除しますか？"}, class: "button button_link"} ) %>
                    </div>
                
            
        </div>
    </main>